{
  "dependencies": {
    "preact": "10.0.0-beta.1",
    "preact-render-to-string": "4.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.4",
    "@types/faker": "4.1.5",
    "@types/jest": "24.0.12",
    "@types/mini-css-extract-plugin": "0.2.0",
    "@types/node": "11.13.10",
    "@types/webpack": "4.4.29",
    "@typescript-eslint/parser": "1.7.0",
    "babel-loader": "8.0.5",
    "can-npm-publish": "1.3.1",
    "codecov": "3.3.0",
    "concurrently": "4.1.0",
    "cpx": "1.5.0",
    "css-loader": "2.1.1",
    "eslint-plugin-jest": "22.5.1",
    "faker": "4.1.0",
    "gatsby": "2.4.1",
    "husky": "2.2.0",
    "jest": "24.7.1",
    "lerna": "3.13.4",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.6",
    "markdownlint-cli": "0.15.0",
    "mini-css-extract-plugin": "0.6.0",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "4.7.1",
    "prettier-stylelint": "0.4.2",
    "pug-cli": "1.0.0-alpha6",
    "pug-lint": "2.5.0",
    "pug-lint-config-clock": "2.0.0",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "ts-jest": "24.0.2",
    "ts-loader": "5.4.5",
    "ts-node": "8.1.0",
    "typescript": "3.4.5",
    "vnu-jar": "18.11.5",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "cacheDirectory": ".cache/jest",
    "coverageReporters": [
      "lcov"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,scss,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.pug": [
      "pug-lint"
    ]
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:pkg": "lerna run build --parallel",
    "build:webpack": "webpack --mode production",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "coverage": "codecov -f ./coverage/lcov.info",
    "lint": "lerna run lint --parallel",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "start": "storybook-server",
    "test": "jest"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ]
}
