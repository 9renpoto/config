{
  "name": "config",
  "devDependencies": {
    "can-npm-publish": "1.3.1",
    "eslint": "5.9.0",
    "fixpack": "2.3.1",
    "husky": "1.2.0",
    "lerna": "3.5.1",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.0",
    "markdownlint-cli": "0.13.0",
    "prettier-eslint-cli": "4.7.1",
    "stylelint": "9.9.0",
    "tslint": "5.11.0",
    "typescript": "3.2.1",
    "typescript-eslint-parser": "21.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint",
      "git add"
    ],
    "*.{css,scss,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ]
  },
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": "ssh://git@github.com/9renpoto/eslint-config.git",
  "scripts": {
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
