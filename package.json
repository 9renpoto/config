{
  "devDependencies": {
    "eslint": "4.19.1",
    "fixpack": "2.3.1",
    "husky": "0.14.3",
    "lerna": "2.11.0",
    "lerna-changelog": "0.7.0",
    "lint-staged": "7.2.0",
    "markdownlint-cli": "0.10.0",
    "prettier-eslint-cli": "4.7.1",
    "stylelint": "9.2.1",
    "tslint": "5.10.0",
    "typescript": "2.9.2",
    "typescript-eslint-parser": "16.0.0"
  },
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint",
      "git add"
    ],
    "*.{css,scss,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ]
  },
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "repository": "ssh://git@github.com/9renpoto/eslint-config.git",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
