{
  "private": true,
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "eslint . --ext=ts,tsx",
    "lint:md": "remark .",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql}'",
    "lint:style": "stylelint --syntax css-in-js '{packages,apps}/**/*.tsx'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@prettier/plugin-pug": "1.6.1",
    "@types/jest": "26.0.14",
    "babel-loader": "8.1.0",
    "can-npm-publish": "1.3.2",
    "cpx": "1.5.0",
    "cypress": "5.3.0",
    "doctoc": "1.4.0",
    "eslint-plugin-jest": "24.0.2",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.4.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "prettier-plugin-elm": "0.7.0",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.1.0",
    "remark-cli": "8.0.1",
    "remark-preset-lint-recommended": "4.0.1",
    "remark-preset-prettier": "0.4.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.0",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "typescript": "3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript"
    ],
    "plugins": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,graphql,css,scss,json,toml,elm,pug,svelte}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "remark"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-prettier"
    ]
  },
  "stylelint": {
    "extends": "@9renpoto/stylelint-config"
  },
  "workspaces": [
    "packages/*",
    "sandbox/*",
    "apps/*"
  ]
}
