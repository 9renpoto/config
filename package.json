{
  "devDependencies": {
    "eslint": "^4.16.0",
    "fixpack": "^2.3.1",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^6.0.0",
    "markdownlint-cli": "^0.7.0",
    "prettier-eslint-cli": "^4.7.0",
    "stylelint": "^8.4.0",
    "tslint": "^5.9.1"
  },
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint",
      "git add"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "repository": "ssh://git@github.com/9renpoto/eslint-config.git",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
