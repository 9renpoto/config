{
  "private": true,
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "remark .",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql,pug,elm,toml,svelte}'",
    "migrate:generate": "ts-node --project sandbox/nest/tsconfig.json $(npm bin)/typeorm migration:generate -n thinking",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "dependencies": {
    "@babel/core": "7.8.4",
    "babel-loader": "8.0.6",
    "cpx": "1.5.0",
    "file-loader": "5.0.2",
    "lerna": "3.20.2",
    "npm-run-all": "4.1.5",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "1.1.6",
    "@types/faker": "4.1.9",
    "@types/jest": "25.1.2",
    "@types/mockdate": "2.0.0",
    "can-npm-publish": "1.3.2",
    "doctoc": "1.4.0",
    "eslint-plugin-jest": "23.7.0",
    "faker": "4.1.0",
    "husky": "4.2.1",
    "jest": "25.1.0",
    "lerna-changelog": "1.0.0",
    "lint-staged": "10.0.7",
    "mockdate": "2.0.5",
    "prettier-eslint-cli": "5.0.0",
    "prettier-plugin-elm": "0.6.0",
    "prettier-plugin-package": "0.3.1",
    "prettier-plugin-svelte": "^0.7.0",
    "prettier-plugin-toml": "0.3.1",
    "remark-cli": "7.0.1",
    "remark-preset-lint-recommended": "3.0.3",
    "rimraf": "3.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript"
    ],
    "plugins": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write"
    ],
    "*.{graphql,css,scss,json,toml,elm,pug,svelte}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "stylelint": {
    "extends": "@9renpoto/stylelint-config"
  },
  "workspaces": [
    "packages/*",
    "sandbox/*",
    "apps/*"
  ]
}
