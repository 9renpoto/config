{
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@storybook/preact": "5.2.8",
    "babel-loader": "^8.0.6",
    "file-loader": "5.0.2",
    "lerna": "3.19.0",
    "npm-run-all": "4.1.5",
    "preact": "10.0.4"
  },
  "devDependencies": {
    "@types/faker": "4.1.8",
    "@types/jest": "24.0.23",
    "@types/mockdate": "2.0.0",
    "can-npm-publish": "1.3.2",
    "codecov": "3.6.1",
    "cpx": "1.5.0",
    "doctoc": "1.4.0",
    "eslint-plugin-jest": "23.1.1",
    "faker": "4.1.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lerna-changelog": "0.8.3",
    "lint-staged": "9.5.0",
    "mockdate": "2.0.5",
    "prettier-eslint-cli": "5.0.0",
    "remark-cli": "7.0.1",
    "remark-preset-lint-recommended": "3.0.3",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.{graphql,css,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "private": true,
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:md": "remark .",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql}'",
    "migrate:generate": "ts-node --project sandbox/nest/tsconfig.json $(npm bin)/typeorm migration:generate -n thinking",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*",
    "sandbox/*",
    "apps/*"
  ]
}
