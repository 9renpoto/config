{
  "dependencies": {
    "preact": "8.4.2",
    "preact-compat": "3.18.4"
  },
  "devDependencies": {
    "@babel/core": "7.4.0",
    "@storybook/addon-storyshots": "5.0.5",
    "@storybook/preact": "5.0.5",
    "@types/faker": "4.1.5",
    "@types/mini-css-extract-plugin": "0.2.0",
    "@types/node": "11.12.2",
    "@types/storybook__preact": "5.0.0",
    "@types/webpack": "4.4.26",
    "@typescript-eslint/parser": "1.5.0",
    "babel-loader": "8.0.5",
    "babel-plugin-require-context-hook": "1.0.0",
    "can-npm-publish": "1.3.1",
    "codecov": "3.2.0",
    "concurrently": "4.1.0",
    "cpx": "1.5.0",
    "css-loader": "2.1.1",
    "faker": "4.1.0",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "lerna": "3.13.1",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.5",
    "markdownlint-cli": "0.14.1",
    "mini-css-extract-plugin": "0.5.0",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "4.7.1",
    "prettier-stylelint": "0.4.2",
    "pug-cli": "1.0.0-alpha6",
    "pug-lint": "2.5.0",
    "pug-lint-config-clock": "2.0.0",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "ts-jest": "24.0.1",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.3",
    "typescript": "3.4.1",
    "vnu-jar": "18.11.5",
    "webpack": "4.29.6",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "cacheDirectory": ".cache/jest",
    "coverageReporters": [
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,scss,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.pug": [
      "pug-lint"
    ]
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:pkg": "lerna run build --parallel",
    "build:webpack": "webpack --mode production",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint --parallel",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "start": "storybook-server",
    "test": "jest"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ]
}
