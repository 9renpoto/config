{
  "dependencies": {
    "file-loader": "4.2.0",
    "lerna": "3.18.3",
    "npm-run-all": "4.1.5",
    "preact": "10.0.1",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.20"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@nestjs/cli": "6.11.1",
    "@storybook/preact": "5.2.5",
    "@types/faker": "4.1.6",
    "@types/jest": "24.0.20",
    "@types/mockdate": "2.0.0",
    "can-npm-publish": "1.3.2",
    "codecov": "3.6.1",
    "cpx": "1.5.0",
    "doctoc": "1.4.0",
    "eslint": "6.6.0",
    "eslint-plugin-jest": "23.0.2",
    "faker": "4.1.0",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lerna-changelog": "0.8.2",
    "lint-staged": "9.4.2",
    "markdownlint-cli": "0.19.0",
    "mockdate": "2.0.5",
    "prettier-eslint-cli": "5.0.0",
    "prettier-stylelint": "0.4.2",
    "pug-cli": "1.0.0-alpha6",
    "rimraf": "3.0.0",
    "stylelint": "11.1.1",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "cacheDirectory": ".cache/jest",
    "coverageReporters": [
      "lcov"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true
  },
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "lint-staged": {
    "*.{css,scss}": [
      "prettier-stylelint --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.graphql": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "git add"
    ]
  },
  "private": true,
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "run-s build:*",
    "build:pkg": "lerna run build --parallel",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "coverage": "codecov -f ./coverage/lcov.info",
    "lint": "run-s -l lint:*",
    "lint:eslint": "npx eslint . --ext=ts,tsx",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql}'",
    "migrate:generate": "ts-node --project sandbox/nest/tsconfig.json $(npm bin)/typeorm migration:generate -n thinking",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "jest"
  },
  "workspaces": [
    "packages/*",
    "sandbox/*",
    "apps/*"
  ]
}
