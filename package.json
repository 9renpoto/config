{
  "devDependencies": {
    "@types/faker": "4.1.5",
    "@types/mini-css-extract-plugin": "0.2.0",
    "@types/node": "10.12.19",
    "@types/webpack": "4.4.24",
    "can-npm-publish": "1.3.1",
    "codecov": "3.1.0",
    "concurrently": "4.1.0",
    "cpx": "1.5.0",
    "css-loader": "2.1.0",
    "eslint": "5.12.1",
    "faker": "4.1.0",
    "husky": "1.3.1",
    "lerna": "3.10.7",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.1",
    "markdownlint-cli": "0.13.0",
    "mini-css-extract-plugin": "0.5.0",
    "npm-run-all": "4.1.5",
    "prettier-eslint-cli": "4.7.1",
    "prettier-stylelint": "0.4.2",
    "pug-cli": "1.0.0-alpha6",
    "pug-lint": "2.5.0",
    "pug-lint-config-clock": "2.0.0",
    "rimraf": "2.6.3",
    "style-loader": "0.23.1",
    "stylelint": "9.10.1",
    "ts-loader": "5.3.3",
    "ts-node": "8.0.1",
    "tslint": "5.12.1",
    "typescript": "3.2.4",
    "vnu-jar": "18.11.5",
    "webpack": "4.29.0",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "*.{css,scss,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier-eslint --write --eslint-config-path ./packages/eslint-config/index.js",
      "git add"
    ],
    "*.pug": [
      "pug-lint"
    ]
  },
  "private": true,
  "scripts": {
    "build": "run-s clean build:*",
    "build:pkg": "lerna run build --parallel",
    "build:webpack": "webpack --mode production",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint --parallel",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test --parallel"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ]
}
